<% @page_title = _('Blog') + ': ' + h(@blog_post.title) -%>
<% include_blog_stylesheet -%>
<% slim_page -%>

<% plus_form_for [Project.current, @blog_post] do |f| -%>  
  <%= f.error_messages %>
  <%= render :partial => 'form', :locals => {:f => f} %>

  <% f.fieldset do -%>
    <%= f.submit _('Update') %> | <%= link_to _('Cancel'), project_blog_post_path(Project.current, @blog_post) %>
  <% end -%>
<% end -%>
  