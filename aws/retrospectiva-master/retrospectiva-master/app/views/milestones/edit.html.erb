<% @page_title = _('Milestones') -%>
<% slim_page -%>
<%= page_title %>

<% plus_form_for @milestone, :url => project_milestone_path(Project.current, @milestone) do |f| -%>
  <%= f.info _('Edit milestone') %>
  <%= render :partial => 'form', :locals => { :f => f } %>

  <fieldset>
    <%= f.submit _('Update') %> | <%= link_to _('Back'), project_milestones_path(Project.current) %>
  </fieldset>
<% end -%>