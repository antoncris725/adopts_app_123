<% @page_title = _('Forgot password') -%>
<% slim_page -%>

<%= page_title %>
<% plus_form_for :user do |f| -%>  

  <% f.fieldset do -%>
    <%= f.label_tag _('Username or Email') + ':', :required => true, :for => 'username_or_email' -%>
    <%= text_field_tag :username_or_email -%>
  <% end -%>
  
  <% f.fieldset do -%>
    <%= f.submit _('Send') %>
  <% end -%>
  
<% end -%>
<%= top_link %>
